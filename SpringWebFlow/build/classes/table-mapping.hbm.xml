<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="pizza.Place" table="place">
		<meta attribute="class-description">
			This class contains the Table details.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>	
			<property name="countSeats" column="count_seats" type="int" />
			<property name="isFree" column="is_free" type="boolean" />
			<property name="isBooked" column="is_booked" type="boolean" />			
	</class>
</hibernate-mapping>